{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/code/df/df.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/code/df.sln"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/code/df/df.csproj",
                "-c",
                "Release",
                "-r",
                "win-x64",
                "--self-contained",
                "-o",
                "${workspaceFolder}/publish/df-binaries.win-x64"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}